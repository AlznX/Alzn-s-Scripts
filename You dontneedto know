-- For people who are new to obfuscating, here is an easy and simple way to obfuscate your scripts!
-- By Darkdev

-- Define the script to obfuscate
local SCRIPT_TO_OBFUSCATE = [[
-- Your script here

]]

-- Function to convert the script into ASCII codes
local function GetBytes(script)
    local byteCodes = {}
    for num = 1, #script do
        byteCodes[num] = string.byte(script, num)
    end
    return byteCodes
end

-- Function to convert ASCII codes into a string buffer
local function ConvertString(byteCodes)
    local stringBuffer = ""
    for _, byteCode in ipairs(byteCodes) do
        stringBuffer = stringBuffer .. "\\" .. byteCode
    end
    return stringBuffer
end

-- Function to obfuscate the script and copy it to clipboard
local function Obfuscate(script)
    local byteCodes = GetBytes(script)
    local stringBuffer = ConvertString(byteCodes)
    local obfuscatedScript = 'loadstring("' .. stringBuffer .. '")()'
    print(obfuscatedScript)
    setclipboard(obfuscatedScript) -- Copy the obfuscated script to clipboard
end

-- Obfuscate the script
Obfuscate(SCRIPT_TO_OBFUSCATE)
